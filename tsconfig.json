{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",

    "declaration": false,

		"moduleResolution": "node",
		"noImplicitAny": false,

    "allowSyntheticDefaultImports": true,

		"sourceMap": false,
		"outDir": "dist",

		"rootDir": "src",
		"baseUrl": "src",
	},

	"include": [ "src/**/*.ts" ],
	"exclude": [ "dist" ]
}